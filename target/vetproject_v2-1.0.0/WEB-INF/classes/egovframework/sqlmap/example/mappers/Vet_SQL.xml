	<select id="selectVetJsonListShort" resultType="egovMap">
			SELECT
				hpt_id, hpt_name, hpt_open, hpt_hit
			FROM hospital
			ORDER BY hpt_id desc LIMIT 0,20
	</select>

	<select id="selectVetJsonListShort2" resultType="egovMap">
			SELECT
				hos.hpt_name,
			    geo2.adrs_new
			FROM
				hospital AS hos
			INNER JOIN hospital_geo2 AS geo2
			ON hos.hpt_id = geo2.hpt_id
			LIMIT 0,30
	</select>
	
	<select id="searchVetList" parameterType="searchVO" resultType="egovMap">

			SELECT
				hpt_name
			FROM
				hospital
			WHERE 1=1
			<if test="searchKeyword!=null and searchKeyword!=''">
				<choose>
					<when test="searchCondition==0">
						AND hpt_name LIKE '%' || #{searchKeyword} || '%'
					</when>
					<when test="searchCondition==1">
						AND province LIKE '%' || #{searchKeyword} || '%'
					</when>
				</choose>
			</if>
			ORDER BY hpt_name ASC
			
	</select>
	
